{
  "manifest_version": 3,
  "name": "ScreenSage Lite",
  "description": "Your private, local AI mentor that summarizes your browsing day.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScreenSage Lite"
  }
}
