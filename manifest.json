{
  "manifest_version": 3,
  "name": "ScreenSage Lite",
  "description": "Your private, local AI mentor that summarizes your browsing day.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "alarms",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ScreenSage Lite",
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js", "chart.umd.min.js", "assets/logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
